<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Description</th>
  </tr>

<% for task in @tasks %>
  <tr id="<%="task"+task.id.to_s%>">
    <td><%= link_to (h task.description), edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
